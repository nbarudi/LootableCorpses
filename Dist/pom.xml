<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>lootablecorpses</artifactId>
        <groupId>ca.bungo.lc</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>ca.bungo.lc</groupId>
    <artifactId>lootablecorpses-dist</artifactId>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>
    <build>
        <directory>../target</directory>
        <finalName>LootableCorpses-${project.version}</finalName>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-shade-plugin</artifactId>
                    <version>3.1.1</version>
                    <executions>
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>shade</goal>
                            </goals>
                            <configuration>
                                <finalName>LootableCorpses-${project.version}-Final</finalName>
                                <minimizeJar>false</minimizeJar>
                                <createDependencyReducedPom>false</createDependencyReducedPom>
                                <artifactSet>
                                    <includes>
                                        <include>ca.bungo.lc:lootablecorpses-*</include>
                                        <include>ca.bungo.lc:Wrapper*</include>
                                        <include>ca.bungo.lc:Abstract</include>
                                    </includes>
                                </artifactSet>
                                <!--<outputDirectory>D:\Old Files\Minecraft Things\Server Projects\1.18\Server\plugins</outputDirectory>-->
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>ca.bungo.lc</groupId>
            <artifactId>lootablecorpses-core</artifactId>
            <version>${project.parent.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>ca.bungo.lc</groupId>
            <artifactId>Wrapper1.18.1_R1</artifactId>
            <version>${project.parent.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>ca.bungo.lc</groupId>
            <artifactId>Wrapper1.17_R1</artifactId>
            <version>${project.parent.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>ca.bungo.lc</groupId>
            <artifactId>Wrapper1.16_R3</artifactId>
            <version>${project.parent.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>ca.bungo.lc</groupId>
            <artifactId>Wrapper1.16_R2</artifactId>
            <version>${project.parent.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-compiler-eclipse</artifactId>
            <version>2.8.8</version>
        </dependency>
    </dependencies>

</project>